<div class="inp text-center">
  <input id="inp-query" name="search_text" size="22" maxlength="50" value="" placeholder="电影、电视剧、演员" autocomplete="off" class="placeholder">
</div>

<div class="inp-btn"><input type="submit" value="搜索"></div>

<div class="col-md-12">
  <div class="group">
    <%= link_to("New movie", new_movie_path, class: "btn btn-default  pull-right") %>
  </div>

<table class="table table-condensed">
  <thead>
    <tr>
      <td>#</td>
      <td>Title</td>
      <td>Description</td>
      <td>Creator</td>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td>#</td>
      <td><%= link_to(movie.title, movie_path(movie)) %></td>
      <td><%= movie.description %></td>
      <td><%= movie.user.try(:email) %></td>
      <td>
        <% if current_user && current_user == movie.user %>
        <%= link_to("Edit", edit_movie_path(movie), class: "btn btn-sm btn-default") %>
        <%= link_to("Delete",movie_path(movie), class: "btn btn-sm btn-default",
        method: :delete, data: { confirm: "Are you sure?"}) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
